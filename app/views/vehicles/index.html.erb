<h1>Listing vehicles</h1>

<table class="table ">
  <tr>
    <th>Name</th>
    <th>Type</th>
    <th>Description</th>
    <th>Capacity</th>
    <th>Efficiency</th>
    <th>Emissions</th>
    <th>Public</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @vehicles.each do |vehicle| %>
  <tr>
    <td><%= vehicle.name %></td>
    <td><%= vehicle.type_id %></td>
    <td><%= vehicle.description %></td>
    <td><%= vehicle.capacity %></td>
    <td><%= vehicle.efficiency %></td>
    <td><%= vehicle.emissions %></td>
    <td><%= vehicle.public %></td>
    <td><%= link_to 'Show', vehicle %></td>
    <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
    <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Vehicle', new_vehicle_path, class: "btn" %>
